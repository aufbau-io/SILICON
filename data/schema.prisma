datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artist {
  id              String    @id @map("artist_id")
  groups          String[]  @map("artist_groups")
  profile         String?   @map("artist_profile")
  members         String[]  @map("artist_members")
  name            String?   @map("artist_name")
  sites           String[]  @map("artist_sites")
  realName        String?   @map("artist_real_name")
  aliases         String[]  @map("artist_aliases")
  records         Record[]
}

model Label {
  id              String   @id @map("label_id")
  name            String?   @map("label_name")
  parentLabel     String[]  @map("label_parent_label")
  subLabels       String[]  @map("label_sub_labels")
  sites           String[]  @map("label_sites")
  profile         String?  @map("label_profile")
  records         Record[]
}

model Record {
  id              Int     @id @map("record_id")
  rating          Float?   @map("record_rating")
  name            String?  @map("record_name")
  year            String?  @map("record_year")
  youtubeIds      String[] @map("record_youtube_ids")
  countries       String[] @map("countries")
  genres          String[] @map("record_genres")
  styles          Style[]
  artists         Artist[]
  labels          Label[]
}

model Style {
  id              String    @id
  records         Record[]
}
